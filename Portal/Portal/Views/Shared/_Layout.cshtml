    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="@Href("~/Scripts/jquery-1.9.1.js")"></script>
    <script src="@Href("~/Scripts/jquery-ui-1.10.1.custom.js")"></script>
    <script src="@Href("~/Scripts/jquery.numeric.js")"></script>
    <script src="@Href("~/Scripts/jquery.maskedinput.js")"></script>
    <script src="@Href("~/Scripts/jquery.ui.timepicker.js")"></script>
