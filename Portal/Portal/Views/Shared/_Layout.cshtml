</head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <span class="English">   <span class="site-title">Canadian Red Cross</span></span>
                    <span class="French">   <span class="site-title">Croix-Rouge canadienne</span></span>
                </div>
                <div class="float-right">

                    <select id="lang">
                        <option value="French">French</option>
                        <option value="English">English</option>
                    </select>

                    <br />
                    <span class="English">
                        <nav>
                            <ul id="menu">
                                @*<li>@Html.ActionLink("LSP", "Index", "LSP")</li>*@

                                <li>@Html.ActionLink("Contacts", "Index", "Contacts")</li>


                                <li>@Html.ActionLink("Schedules", "Index", "Schedules")</li>
                            </ul>
                        </nav>
                    </span>
                    <span class="French">
                        <nav>
                            <ul id="menu">
                                @*<li>@Html.ActionLink("LSP", "Index", "LSP")</li>*@

                                <li>@Html.ActionLink("Bottin", "Index", "Contacts")</li>


                                <li>@Html.ActionLink("Des horaires", "Index", "Schedules")</li>
                            </ul>
                        </nav>
                    </span>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>


       
    </body>
    <script>

    

    @if (Request.Cookies["Language"] == null)
    {
        <text>var lng = "French";</text>
    } else {

    <text>var lng = "@Request.Cookies["Language"].Value";</text>
    }


        $("#lang").change(function () {
            document.cookie = "Language=" + $("#lang").val() + ";";
            lng = $("#lang").val();
            //alert(lng);
            setLang();

        });


        //alert(lng);

        function setLang() {

            if (lng == "English") {
                $(".English").show();
                $(".French").hide();

            } else {
                $(".French").show();
                $(".English").hide();
            }

        }


        $(function () {
            setLang();
            $("#lang").val(lng)

        });

    </script>

</html>
